<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.aurorethiaumont.artpeople"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="be.aurorethiaumont.artpeople.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.aurorethiaumont.artpeople.ShowContact"
            android:label="@string/title_activity_show_contact"
            android:parentActivityName="be.aurorethiaumont.artpeople.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.aurorethiaumont.artpeople.MainActivity" />
        </activity>
    </application>

</manifest>
